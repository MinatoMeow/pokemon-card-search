<!DOCTYPE html>
<html lang="en">
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <link href="style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chakra+Petch:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Revalia&display=swap"
      rel="stylesheet" />
    <title>Pokemon Card Search</title>
  </head>
  <body class="bgcolor">
    <div class="container fgcolor text-center" id="main-page">
      <div class="row">
        <h1 class="site-title bold-text">Pokemon Card Search</h1>
      </div>
      <div class="row" id="image">
        <%if (locals.card) {%>
        <div class="col">
          <img src="<%=card.image %>/low.png" alt="" />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h2 class="card-activity reg-text"><%=card.name %></h2>
        </div>
        <%}%>
      </div>
      <!-- future feature perhaps <h1 class="price"><= data.data.tcgplayer.prices.normal.low %></h1> -->
      <%if (locals.error) {%>
      <div class="row" id="error">
        <div class="col">
          <h1><%=error %></h1>
        </div>
      </div>
      <%}%>
      <div class="row">
        <div class="col">
          <%if (locals.multiCard) {%>
          <img src="<%=multiCard[0].image %>/low.png" alt="" />
        </div>
        <h2 class="card-activity reg-text"><%=multiCard[0].name %></h2>

        <%}%>
      </div>
      <form action="/" id="form" class="form-inline" method="POST">
        <div class="row" id="searchline">
          <div class="col" id="searchbar">
            <input
              type="text"
              name="name"
              id="poke-names"
              placeholder="Enter full or partial name"
              aria-label="Search"
              class="accent reg-text align" />
          </div>
          <div class="col" id="ddown">
            <select name="set" class="form-submit accent reg-text" id="set">
              <option value="">All Base Sets</option>
              <option value="1">Base Set</option>
              <option value="2">Jungle</option>
              <option value="p">Black Star Promos</option>
              <option value="3">Fossil</option>
              <option value="4">Base Set 2</option>
              <option value="5">Team Rocket</option>
            </select>
          </div>
        </div>

        <div class="row">
          <div class="col" id="button">
            <button
              type="submit"
              class="btn btn-primary btn-lg btn-block bold-text small-button"
              value="Submit">
              Search
            </button>
          </div>
        </div>
      </form>

      <%if (locals.multiCard) {%>
      <div class="row">
        <%if (multiCard.length>1) {%>
        <h3 class="reg-text">Related Cards:</h3>
      </div>
      <div class="container" id="related-cards">
        <div class="row" style="padding-bottom: 3rem" id="images">
          <%for (i = 1; i < multiCard.length; i++) {%>
          <div class="img">
            <img src="<%=multiCard[i].image %>/low.png" alt="" />
          </div>
          <%}%> <%}%> <%}%>
        </div>
      </div>
    </div>
    <div id="tag-error" class="tag-error"><h1></h1></div>
    <%- include("footer.ejs") %>
  </body>
</html>
